
<form class="bills-update" data-id="{{bill.id}}">
  <form id="create-bills" class="px-4 py-3 hide">
    <div class="form-group">
      <label>TYPE OF BILL</label>
      <input type="text" name="bill[type_of]" placeholder="TYPEOF" class="form-control">
    </div>
    <div class="form-group">
      <label>AMOUNT</label>
      <input type="text" name="bill[amount]" placeholder="AMOUNT" class="form-control">
    </div>
    <div class="form-group">
      <label>DUE DATE</label>
      <input type="date" name="bill[due_on]" placeholder="DATE" class="form-control">
    </div>
    <button  type="submit" class="btn btn-primary" value="Update Bill!">Submit</button>
  </form>
</form>
